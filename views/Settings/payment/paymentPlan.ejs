<div class="w-full px-3 bg-white">
	<div class="flex flex-col w-full items-center">
		<div class="w-1/2 h-full flex justify-center box-content rounded-xl" id="right-side">
			<div class="w-9/12">
				
				<div class="flex items-center justify-between my-4">
					<button type="button" id="open-table" class="<%= paymentTableData?.length > 0 ? '' : 'hidden' %>flex items-center text-sm text-gray-500"><span class="mb-1 mr-1">&LeftArrow;</span> Go Back</button>
					<h1 class="text-2xl text-center">Payment Plan</h1>
					<div class="invisible">payment</div>
				</div>
				
				<!-- Plan Selection -->
				<div class="space-y-4">
					<!-- Weekday Fall Pass -->
					<label class="radio-option block cursor-pointer">
						<input type="radio" name="plan" value="weekday" class="sr-only">
						<div class="option-content border-2 border-gray-200 rounded-xl p-6 hover:border-gray-300">
							<div class="flex items-center justify-between">
								<div class="flex items-center space-x-4">
									<div class="check-indicator"></div>
									<div>
										<h3 class="text-xl font-semibold text-gray-900">Starter | 3,000 messages</h3>
										<h4 class="text-lg font-semibold text-gray-900"></h4>
										<div class="ml-5 mt-2">
											<ul class="list-disc">
												<li class="text-sm text-gray-600">Access to all dashboard features</li>
												<li class="text-sm text-gray-600">Basic reports & analytics</li>
												<li class="text-sm text-gray-600">Real-time tracking of messages left</li>
												<li class="text-sm text-gray-600">Access for 24 * 7 messaging</li>
											</ul>
										</div>
									</div>
									
								</div>
								<div class="text-right">
									<div class="text-sm text-red-500 line-through"><span class="text-sm mr-1 text-gray-500"><%= plans[3000].currency %></span><%= plans[3000].amount * 2 %></div>
									<div class="text-xl font-bold text-gray-900"><span class="text-sm mr-1 text-gray-500"><%= plans[3000].currency %></span><%= plans[3000].amount %></div>
									<!-- <div class="text-sm text-gray-500">Sep to Jan</div> -->
								</div>
							</div>
						</div>
						
					</label>
					
					<!-- Unlimited Fall Pass (Most Popular) -->
					<label class="radio-option block cursor-pointer">
						<input type="radio" name="plan" value="unlimited" class="sr-only" checked>
						<div class="option-content border-2 border-gray-200 rounded-xl p-6 hover:border-gray-300">
							<div class="flex items-center justify-between">
								<div class="flex items-center space-x-4">
									<div class="check-indicator ">
										<!-- <div class="absolute left-1.5 top-0.5 w-1.5 h-3 border-white border-r-2 border-b-2 transform rotate-45">

                                        </div> -->
									</div>
									<div>
										<h3 class="text-xl font-semibold text-gray-900">Growth | 5,000 messages</h3>
										<h4 class="text-lg font-semibold text-gray-900"></h4>
										<div class="ml-5 mt-2">
											<ul class="list-disc">
												<li class="text-sm text-gray-600">Access to all dashboard features</li>
												<li class="text-sm text-gray-600">Advanced reports & analytics</li>
												<li class="text-sm text-gray-600">Real-time tracking of messages left</li>
												<li class="text-sm text-gray-600">Access for 24 * 7 messaging</li>
												<li class="text-sm text-gray-600">Priority support</li>
											</ul>
										</div>
									</div>
									
								</div>
								<div class="text-right">
									<div class="text-sm text-red-500 line-through"><span class="text-sm mr-1 text-gray-500"><%= plans[5000].currency %></span><%= plans[5000].amount * 2 %></div>
									<div class="text-xl font-bold text-gray-900"><span class="text-sm mr-1 text-gray-500"><%= plans[5000].currency %></span><%= plans[5000].amount %></div>
									<!-- <div class="text-sm text-gray-500">Sep to Jan</div> -->
								</div>
							</div>
						</div>
					</label>
					
					<!-- Extended Fall Pass -->
					<label class="radio-option block cursor-pointer">
						<input type="radio" name="plan" value="extended" class="sr-only">
						<div class="option-content border-2 border-gray-200 rounded-xl p-6 hover:border-gray-300">
							<div class="flex items-center justify-between">
								<div class="flex items-center space-x-4">
									<div class="check-indicator"></div>
									<div>
										<h3 class="text-xl font-semibold text-gray-900">Scale | 10,000 messages</h3>
										<h4 class="text-lg font-semibold text-gray-900"></h4>
										<div class="ml-5 mt-2">
											<ul class="list-disc">
												<li class="text-sm text-gray-600">Access to all dashboard features</li>
												<li class="text-sm text-gray-600">Advanced reports & analytics</li>
												<li class="text-sm text-gray-600">Real-time tracking of messages left</li>
												<li class="text-sm text-gray-600">Access for 24 * 7 messaging</li>
												<li class="text-sm text-gray-600">Priority support</li>
											</ul>
										</div>
									</div>
								</div>
								<div class="text-right">
									<div class="text-sm text-red-500 line-through"><span class="text-sm mr-1 text-gray-500"><%= plans[10000].currency %></span><%= plans[10000].amount * 2 %></div>
									<div class="text-xl font-bold text-gray-900"><span class="text-sm mr-1 text-gray-500"><%= plans[10000].currency %></span><%= plans[10000].amount %></div>
									<!-- <div class="text-sm text-gray-500">Sep to Jan</div> -->
								</div>
							</div>
							
						</div>
						
					</label>
				</div>
			</div>
		</div>
		
		<div class="w-1/2 flex justify-center">
			<div class="space-y-4 py-10" id="btn-wrap">
				
				<button type="button" class="bg-black rounded h-10 w-52 flex items-center justify-center" id="btn">
					<div class="text-white loader-text">Continue with Payment</div>
					<div class="loading-spinner hidden"></div>
				</button>
				
			</div>
			
			<div id="stripe-section" class="hidden px-4 mt-10">
				
				<div id="card-wrapper" class="w-full hidden">
					<label class="text-sm text-gray-500 mb-1 block">Card details</label>
					<div id="card-element" class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-white"></div>
					<div id="card-errors" class="text-xs text-red-500 mt-1"></div>
				</div>
			</div>
		</div>
	</div>
</div>