<% if (templateData) { %>
<!-- Modal Container -->
<div id="customModal" class="fixed inset-0 bg-gray-800 bg-opacity-50 backdrop-blur-sm flex justify-center items-center hidden z-50">
	<div class="bg-white rounded-lg shadow-lg min-w-[50rem] h-[70%] overflow-auto px-6 py-4">
		<!-- Modal Header -->
		<div class="flex justify-between items-center h-[10%]">
			<h5 id="templateModalLabel" class="text-xl font-semibold">Template Name</h5>
			<button class="text-gray-500 hover:text-gray-700 text-3xl" id="modalCloseBtn">&times;</button>
		</div>
		
		<!-- Modal Body -->
		<div class=" flex space-x-6 w-full h-[90%]">
			<!-- Left Side: Dynamic Attributes Form -->
			<div class="w-1/2 space-y-4 h-full">
				<form id="previewForm" class="h-[80%] overflow-auto">
					<!-- Dynamic attributes will be inserted here -->
				</form><!-- Modal Footer -->
				<div class="flex justify-end p-4">
					<button class="px-4 py-2 w-full bg-black text-white rounded-md" id="submitTemplate" onclick="submit()">Submit</button>
				</div>
			</div>
			
			
			<!-- Right Side: iPhone Preview -->
			<div class="w-1/2 flex justify-center items-center">
				<div class="iphone-container w-full max-w-xs">
					<div class="iphone-screen">						
						<div class="z-50 relative " id="submitPreviewContainer">
							<div class="py-1 px-2  font-bold relative" id="previewHead"></div>
							<div class="text-base px-2  leading-5 py-1" id="previewBod"></div>
							<div class="text-sm px-2  text-gray-500 py-1" id="previewFoot"></div>
							<div class=" " id="previewButton"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% } %>