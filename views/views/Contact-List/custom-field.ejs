<body>
	
	<!-- Sidebar -->
	<div class="layout-container">
		<%- include("../commonJS/sidebar")  %>
		<!-- END SIDEBAR MENU TOP TRAY CONTENT-->
		
		<!-- START PAGE-CONTAINER -->
		<div class="main-content">
			<!-- END HEADER -->
			<div class="logo breadCrumb">
				
				<!-- START BREADCRUMB -->
				<nav class="flex" aria-label="Breadcrumb">
					
					<div class="flex items-center">
						<a href="/" class="text-gray-500 hover:text-gray-700">Dashboard</a>
						<svg class="w-4 h-4 mx-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L11.586 10 7.293 5.707a1 1 0 011.414-1.414l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
						</svg>
					</div>
					
					<div class="flex items-center">
						<a href="/contact-list" class="text-gray-500 hover:text-gray-700">Contact List</a>
						<svg class="w-4 h-4 mx-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L11.586 10 7.293 5.707a1 1 0 011.414-1.414l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
						</svg>
					</div>
					
					<div class="flex items-center">
						<a href="#" class="text-red-600">Custom Field</a>
						<div class="relative inline-block pl-2">
							<i class="info-icon text-red-700 hover:text-red-900">
								<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<circle cx="12" cy="12" r="10"></circle>
									<line x1="12" y1="16" x2="12" y2="12"></line>
									<line x1="12" y1="8" x2="12.01" y2="8"></line>
								</svg>
								
							</i>
							<div class="tooltip invisible opacity-0 w-64 bg-gray-900 text-white text-sm rounded-lg absolute z-10 p-4 -translate-x-1/2 left-1/2 mt-2 transition-opacity duration-300">
								<!-- Arrow -->
								<div class="absolute -top-2 left-1/2 -translate-x-1/2 w-4 h-4 bg-gray-900 transform rotate-45"></div>
								<!-- Content -->
								<div class="relative">
									Create and manage custom fields to include in your CSV uploads, allowing for better personalization and segmentation of contacts.
								</div>
							</div>
						</div>
					</div>
				</nav>
				<!-- END BREADCRUMB -->
				
			</div>
			
			<!-- START card -->
			<div class=" mainDiv mt-4">
				<div class=" flex items-start w-full justify-between ">
					<!-- Custom Fields Table -->
					
					<div class="bg-white w-1/2 px-5 border-r-8 border-gray-50">
						<% if (customFields && customFields.length > 0) { %>
						<div class=" ">
							<table class=" min-w-full border-separate border-spacing-y-4">
								<thead>
									<tr class="text-gray-400 text-center">
										<td class="">Sno.</td>
										<td class="text-left">Field name</td>
										<td class="text-left">Field type</td>
										<td class="text-left">Created By</td>
										<td class="text-left">Actions</td>
									</tr>
								</thead>
								<tbody class="bg-white divide-y divide-gray-200">
									<% customFields.forEach((field, index) => { %>
									<tr class="border-gray-100 border text-gray-700 text-center">
										<td class="border-l border-t border-b rounded-lg py-4 border-gray-200 whitespace-nowrap"><%= (page - 1) * 6 + (index + 1) %></td>
										<td class="text-left border-t border-b rounded-lg border-gray-200 whitespace-nowrap"><%= field.clname %></td>										
										<td class="text-left border-t border-b rounded-lg border-gray-200 whitespace-nowrap"><%= field.cltype %></td>
										<td class="text-left border-t border-b rounded-lg border-gray-200 whitespace-nowrap"><%= field.agentName %></td>
										<td class="text-left border-r border-t border-b rounded-lg border-gray-200 whitespace-nowrap">
											<button onclick="deleteField('<%= field.unique_id %>')" class="text-red-600 hover:text-red-900">
												<img src="svg/bin contact list.svg" alt="bin" class="w-4" />
											</button>
										</td>
									</tr>
									<% }); %>
								</tbody>
							</table>
							
							<% if (totalPages > 1) { %>
							<%- include('../commonJS/pagination') %>
							<% } %>
							
						</div>
						<% } else { %>
						<div class="flex flex-col items-center justify-center min-h-[400px]  rounded-lg mt-4">
							<div class="text-center">
								<img src="https://img.freepik.com/free-vector/hands-holding-tablet-with-forefinger-clicking-start-button-new-application-launch-flat-illustration_74855-20595.jpg?ga=GA1.1.131490893.1732525963&semt=ais_hybrid" alt="No contacts" class="w-48 h-48 mx-auto mb-4">
								
								<h3 class="text-xl font-semibold text-gray-900 mb-2">No custom fields yet</h3>
								<p class="text-gray-600 mb-6">Start adding custom fields by clicking on "Add"</p>
								<!-- <button type="submit" class="bg-black text-white px-4 py-2 rounded-md hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black">
									Add
								</button> -->
							</div>
						</div>
						<% } %>
					</div>
					
					
					<!-- Add New Field Form -->
					<div class=" w-1/2 mx-2 bg-white p-6 rounded-lg ">
						<h2 class="text-2xl mb-4">Add new field</h2>
						<form id="addFieldForm" class="space-y-7">
							<div>
								<label class="block text-sm font-medium text-gray-400">Field name</label>
								<input type="text" name="fieldName" placeholder="What is field name" class="mt-1 p-3 border block w-full rounded-md border-gray-300  focus:border-indigo-500 focus:ring-indigo-500" required>
							</div>
							
							<div>
								<label class="block text-sm font-medium text-gray-400">Field Type</label>
								<div class="select-wrapper">
									<select name="fieldType" class="mt-1 p-3 block w-full rounded-md border-gray-300 border  focus:border-indigo-500 focus:ring-indigo-500 text-gray-400" required>
										<option value="">Select user type</option>
										<option value="input">Input</option>
										<option value="dropdown">Dropdown</option>
									</select>
								</div>
							</div>
							
							<button type="submit" class="bg-black text-white px-4 py-2 rounded-md hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black">
								Add
							</button>
						</form>
					</div>
				</div>
			</div>
			<!-- Pop-Up Modal to Edit List -->
		</div>
	</div>
