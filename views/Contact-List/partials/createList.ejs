	<script src="https://cdn.tailwindcss.com"></script>
	
	
	<div id="campaignModal" class="fixed inset-0 z-50 opacity-0 pointer-events-none transition-opacity duration-300 ease-in-out">
		<!-- Backdrop -->
		<div class="absolute inset-0 bg-gray-500 bg-opacity-50"></div>
		
		<!-- Modal Content -->
		<div class="relative bg-white w-[90%] max-w-lg mx-auto mt-[10%] rounded-lg shadow-lg p-6 transform transition-transform duration-300 ease-in-out scale-95">
			<div class="flex justify-between items-center mb-6">
				<h2 class="text-2xl font-semibold text-gray-900">Create contact list</h2>
				<span class="text-2xl text-gray-600 cursor-pointer hover:text-gray-800 close">&times;</span>
			</div>
			
			<form id="contactListForm" class="space-y-4">
				<div class="space-y-2">
					<label for="countryCode" class="block text-sm font-medium text-gray-700">Country code*</label>
					<select id="countryCode" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" required>
						<% countries.forEach(function(country) { %>
						<option value="<%= country.code %>"><%= country.code %>&nbsp;<%= country.name %></option>
						<% }); %>
					</select>
				</div>
				
				<div class="space-y-2">
					<label for="listName" class="block text-sm font-medium text-gray-700">Contact list name</label>
					<input type="text" id="listName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Give your contact list a name" required>
				</div>
				
				<div class="flex gap-3 mb-6">
					<div class="flex-1">
						<label class="inline-block px-3 py-2 border border-gray-300 rounded-md cursor-pointer hover:bg-gray-50 text-gray-600">
							<input type="file" id="contactFile" accept=".csv,.xls,.xlsx" class="hidden">
							<i class="pg-icon">upload</i> Choose File
						</label>
					</div>
					<button type="button" id="downloadTemplate" class="px-3 py-2 border border-gray-300 rounded-md hover:bg-gray-50 text-gray-600">
						<i class="pg-icon">download</i> Download File
					</button>
				</div>
				
				<button type="submit" class="w-full py-3 bg-black text-white rounded-md font-medium hover:bg-gray-800 transition-colors duration-200">
					Add List
				</button>
			</form>
		</div>
	</div>