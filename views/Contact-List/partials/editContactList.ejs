<div id="editContactModal" class="fixed inset-0 z-50 opacity-0 pointer-events-none transition-opacity duration-300 ease-in-out">
	<!-- Backdrop -->
	<div class="absolute inset-0 bg-gray-500 bg-opacity-50"></div>
	
	<!-- Modal Content -->
	<div class="relative bg-white w-[90%] max-w-lg mx-auto mt-[10%] rounded-lg shadow-lg p-6 transform transition-transform duration-300 ease-in-out scale-95">
		<div class="flex justify-between items-center mb-6">
			<h2 class="text-2xl font-semibold text-gray-900">Edit contact</h2>
			<span class="text-2xl text-gray-600 cursor-pointer hover:text-gray-800 close outline-none focus:outline-none focus-within:outline-none">&times;</span>
		</div>
		
		<form id="editContactForm" class="space-y-4">
			<div class="space-y-2">
				<label for="editCountryCode" class="block text-sm font-medium text-gray-700">Country code*</label>
				<div class="select-wrapper">
					<select id="editCountryCode" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" required>
						<% countries.forEach(function(country) { %>
						<option value="<%= country.code %>"><%= country.name %></option>
						<% }); %>
					</select>
				</div>
			</div>
			
			<div class="space-y-2">
				<label for="editWhatsAppNumber" class="block text-sm font-medium text-gray-700">WhatsApp number</label>
				<input type="tel" id="editWhatsAppNumber" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Enter WhatsApp number" required>
			</div>
			
			<div class="space-y-2">
				<label for="editCity" class="block text-sm font-medium text-gray-700">Choose city</label>
				<div class="select-wrapper">
					<select id="editCity" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" required>
						<option value="">Select</option>
					</select>
				</div>
			</div>
			
			<div class="space-y-2">
				<label for="editUserName" class="block text-sm font-medium text-gray-700">User name</label>
				<input type="text" id="editUserName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="John Doe" required>
			</div>
			
			<button type="submit" class="w-full py-3 bg-black text-white rounded-md font-medium hover:bg-gray-800 transition-colors duration-200">
				Update user
			</button>
		</form>
	</div>
</div>