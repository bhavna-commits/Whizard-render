<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
	<h2 class="text-2xl font-semibold mb-6">Add new field</h2>
	
	<!-- Field Name Input -->
	<div class="mb-4">
		<label for="fieldName" class="block text-sm font-medium text-gray-700 mb-1">Field name</label>
		<input type="text" id="fieldName" placeholder="What is name of user" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
	</div>
	
	<!-- Field Type Select -->
	<div class="mb-4">
		<label for="fieldType" class="block text-sm font-medium text-gray-700 mb-1">Field Type</label>
		<select id="fieldType" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
			<option disabled selected>Select user type</option>
			<option value="admin">Admin</option>
			<option value="guest">Guest</option>
			<option value="editor">Editor</option>
		</select>
	</div>
	
	<!-- Add Button -->
	<button type="button" class="w-full bg-black text-white p-3 rounded-md hover:bg-gray-800 transition">
		Add
	</button>
</div>
