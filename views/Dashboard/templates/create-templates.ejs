          <div class="bg-preview py-3 px-2 mt-3" id="previewContainer">
            <div id="previewHeader"></div>
            <div id="previewBody"></div>
            <div id="previewFooter"></div>
            <div id="previewButtons"></div>
          </div>
        </div>
      </div>
