    <div class="flex flex-grow w-[90%]">

      <div class="card p-3 ml-2 flex-shrink">
        <div class="title border-bottom">
          <h4 class="page-title">Add template</h4>
        </div>

        <form action="">
          <div class="form-group mt-3">
            <label>Template Name</label>
            <input type="email" class="form-control shadow-sm rounded border-1" placeholder="Give new template a name" required="" />
          </div>

          <div class="form-group mt-3">
            <label>Category</label>
            <div class="dropdown dropdown-default w-100 relative ">
              <button aria-label="" class="btn dropdown-toggle w-100" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Choose category
              </button>
              <div class="dropdown-menu absolute bottom-[-12px] left-0">
                <a class="dropdown-item" href="#">Action</a>
                <a class="dropdown-item" href="#">Helvetica </a>
                <a class="dropdown-item" href="#">SegeoUI</a>
              </div>
            </div>
          </div>
          <div class="form-group py-1">
            <label>Category</label>
            <div class="form-group-default-select2">
              <select class="rounded shadow-sm border full-width select2-hidden-accessible" data-init-plugin="select2" multiple="" tabindex="-1" aria-hidden="true">
                <option value="Marketing">Marketing</option>
                <option value="Verification">Verification</option>
                <option value="Infomation">Infomation</option>
                <option value="Promotional">Promotional</option>
                <option value="Updates">Updates</option>

              </select>
            </div>
          </div>
          <div class="form-group py-1">
            <label> Choose Language(s)*</label>
            <div class="form-group-default-select2">
              <select class="rounded shadow-sm border full-width select2-hidden-accessible" data-init-plugin="select2" multiple="" tabindex="-1" aria-hidden="true">
                <option value="English">English</option>
                <option value="Hindi">Hindi</option>
                <option value="Bahasa">Bahasa</option>
                <option value="Cantonese">Cantonese</option>
                <option value="Tamil">Tamil</option>
                <option value="Telugu">Telugu</option>
                <option value="YOUTUBE">Marathi</option>
                <option value="YOUTUBE">Marathi</option>
              </select>
            </div>
          </div>
        </form>
      </div>


      <div class="col-lg-6 px-1 flex-grow">
        <div class="card p-3">
          <div class="border-bottom d-flex justify-content-between align-items-center">
            <div class="title">
              <h4 class="page-title">Setup Template</h4>
            </div>
            <!-- Submit Button -->
            <div class="text-end">
              <button class="btn btn-primary" id="submitTemplate" onclick="submit()">
                Submit
              </button>
            </div>
          </div>

          <div class="setup-template">
            <!-- Header -->
            <div class="d-flex align-items-center justify-content-between">
              <div class="header-text">
                <h6>
                  Header
                  <span class="text-secondary small">(optional)</span>
                </h6>
              </div>
              <div class="header-dropdown">
                <div class="form-group mt-3">
                  <div class="dropdown dropdown-default w-100">
                    <button aria-label="" class="btn dropdown-toggle w-100" type="button" id="mediaTypeDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Text
                    </button>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="#" id="chooseText">Text</a>
                      <a class="dropdown-item" href="#" id="chooseMedia">Media</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div id="headerInputContainer" class="form-group mt-1">
            <label class="text-secondary small">Add a title or choose which type of media you’ll use for
              this header.</label>
            <input type="text" class="form-control border-0" id="headerInput" placeholder="Enter header title" />
          </div>

          <div id="mediaInputContainer" class="form-group mt-1" style="display: none">
            <label class="text-secondary small">Choose from .jpg or .png</label>
            <input type="file" id="mediaInput" accept="image/*,.pdf,.doc,.docx" />
          </div>

          <!-- Body -->
          <div class="form-group mt-4">
            <h6>Body</h6>
            <label class="text-secondary small">Enter the text for your message in the language that you’ve
              selected.</label>

            <div class="border p-2 rounded shadow-sm">
              <div class="btn-toolbar mb-2 d-flex align-items-center justify-content-between" role="toolbar">
                <div id="toolbar" class="toolbar">
                  <button class="format-btn border-0 rounded" onclick="formatText('bold', this)">
                    <i class="fa fa-bold"></i>
                  </button>
                  <button class="format-btn border-0 rounded" onclick="formatText('italic', this)">
                    <i class="fa fa-italic"></i>
                  </button>
                  <button class="format-btn border-0 rounded" onclick="formatText('underline', this)">
                    <i class="fa fa-underline"></i>
                  </button>
                  <button class="format-btn border-0 rounded" onclick="formatText('strikethrough', this)">
                    <i class="fa fa-strikethrough"></i>
                  </button>

                  <!-- Emoji buttons -->
                  <button class="format-btn emoji-btn border-0 rounded" onclick="insertEmoji('😊')">
                    😊
                  </button>
                  <button class="format-btn emoji-btn border-0 rounded" onclick="insertEmoji('😂')">
                    😂
                  </button>
                  <button class="format-btn emoji-btn border-0 rounded" onclick="insertEmoji('❤️')">
                    ❤️
                  </button>
                </div>
                <div class="count">
                  <small class="text-secondary float-end" id="charCount">0/1024</small>
                </div>
              </div>
              <!-- <textarea id="bodyInput" class="form-control border-0" contenteditable="true" maxlength="1024" style="min-height: 80px;"></textarea> -->
              <div id="bodyInput" class="form-control border-0" contenteditable="true" maxlength="1024" style="min-height: 50px; height: auto"></div>
            </div>
          </div>

          <!-- Footer -->
          <div class="form-group mt-4">
            <h6>Footer</h6>
            <label class="text-secondary small">Add a short line of text to bottom of your message
              template, if you add the marketing opt-out button, the
              associated footer will be shown here by default.</label>
            <div class="border rounded shadow-sm d-flex align-items-center justify-content-between p-2">
              <input type="text" class="form-control border-0" maxlength="64" id="footerInput" placeholder="Enter footer text" />

              <div class="count">
                <small class="text-secondary footer-count float-end">0/64</small>
              </div>
            </div>
          </div>

          <!-- Buttons -->
          <div class="form-group mt-4">
            <h6>
              Buttons
              <span class="text-secondary small">(optional)</span>
            </h6>
            <label class="text-secondary small">Create buttons that let customers respond to your message
              or take action.
            </label>
            <!-- Button Dropdown -->
            <div class="btn-dropdown w-25">
              <div class="dropdown dropdown-default w-100">
                <button aria-label="" class="btn w-100 dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  + Add a button
                </button>
                <div class="dropdown-menu" style="width: 83.5125px; will-change: transform">
                  <a class="dropdown-item" href="#" id="addWebsiteBtn">Visit Website</a>
                  <a class="dropdown-item" href="#" id="addCallBtn">Call Phone Number</a>
                </div>
              </div>
            </div>

            <div id="buttonOptions"></div>
          </div>
        </div>
      </div>
