<div class="help-container">
	<div class="p-4">
		<button id="helpBtn" class="bg-gray-800 text-white p-2 rounded-full flex items-center justify-center w-12 h-12 shadow-lg">
			<!-- Using SVG instead of img since you mentioned svg/help.svg -->
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<circle cx="12" cy="12" r="10"></circle>
				<path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
				<line x1="12" y1="17" x2="12.01" y2="17"></line>
			</svg>
		</button>
	</div>
	
	<div id="helpModal" class="help-modal bg-white rounded-xl p-4 space-y-5">
		<!-- Header -->
		<div class="flex justify-between items-center pb-3 border-b-2 border-gray-200">
			<h2 class="text-xl font-medium">Help & Support</h2>
			<div class="flex items-center">
				<button id="closeBtn">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<line x1="18" y1="6" x2="6" y2="18"></line>
						<line x1="6" y1="6" x2="18" y2="18"></line>
					</svg>
				</button>
			</div>
		</div>
		
		<!-- Content -->
		<div class="space-y-5 overflow-y-auto h-96 scroll">
			<% help?.forEach((help, i) => { %>
			<button type="button" onclick="window.open('<%= help.a %>', '_blank')" class="p-3 border-2 hover:bg-gray-50 border-gray-300 rounded-xl w-full">
				<div class="flex">
					<div class="circle-number">
						<%= ++i %>
					</div>
					<div class="text-left max-w-[22rem]">
						<h3 class="text-xl mb-2"><%= help.title %></h3>
						<p class="text-gray-600"><%= help.description %></p>
					</div>
				</div>
			</button>
			<% }); %>
		</div>
		
		<!-- Footer -->
		<div class="text-center space-y-3">
			<p class="text-blue-500 text-lg">Need help?</p>
			<p class="text-gray-700">
				<a href="tel:+917392874923" class="font-medium underline mr-1">+91-7058973516</a> |
				<a href="mailto:john@gmail.com" class="font-medium underline ml-1">contact@whizard.com</a>
			</p>
		</div>
	</div>
</div>