<!-- Dark Overlay -->
<div id="overlay" class="fixed inset-0 bg-black opacity-50 hidden z-40" onclick="closeFilterModal()"></div>

<!-- Sidebar Modal -->
<div id="filterSidebar" class="fixed right-[-400px] top-0 w-96 h-full bg-white shadow-lg z-50 transition-all duration-300">
	<div class="p-4">
		<div class="flex justify-between items-center">
			<h3 class="text-lg font-semibold mb-4">Filters</h3>
			<button class="text-2xl font-semibold" onclick="closeFilterModal()">&times;</button>
		</div>
		
		<!-- Date Range Picker (flatpickr) -->
		<div class="mb-4">
			<label for="timeFrame" class="block text-sm mb-2">Time Frame</label>
			<input type="text" id="timeFrame" placeholder="Select a time frame" class="border p-2 rounded w-full" />
		</div>
		
		<!-- Filter Options -->
		<div class="mb-4">
			<label for="statusFilter" class="block text-sm mb-2">Status</label>
			<select id="statusFilter" class="border p-2 rounded w-full">
				<option value="all">All Campaigns</option>
				<option value="scheduled">Scheduled</option>
				<option value="broadcast">Broadcast</option>
			</select>
		</div>
		
		<!-- Apply Filter Button -->
		<div class="text-right">
			<button onclick="applyFilters()" class="bg-blue-500 text-white py-2 px-4 rounded">
                <div id="loadingSpinner" class="absolute inset-0 flex justify-center items-center hidden">
                	<svg class="animate-spin h-10 w-10 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                		<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                		<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                		</path>
                	</svg>
                </div>
				Apply Filters
			</button>
		</div>
	</div>
</div>